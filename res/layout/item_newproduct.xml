<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/offer_item_background_color"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textview_newcollectiontext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/items_vertical_margin"
            android:layout_marginLeft="@dimen/items_horizontal_margin"
            android:layout_marginTop="@dimen/items_vertical_margin"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="@string/text_offertext"
            android:textColor="@color/offer_text_color"
            android:textSize="@dimen/offers_text_font_size"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textview_newcollectionbrandstore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/items_vertical_margin"
            android:layout_marginLeft="@dimen/items_horizontal_margin"
            android:layout_marginTop="@dimen/items_vertical_margin"
            android:layout_weight="5"
            android:text="@string/text_offertext"
            android:textAllCaps="true"
            android:textColor="@color/brandstore_text_color"
            android:textSize="@dimen/brandstore_text_font_size"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textview_newcollectionlocations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/items_vertical_margin"
            android:layout_marginLeft="@dimen/items_horizontal_margin"
            android:layout_marginTop="@dimen/items_vertical_margin"
            android:text="@string/text_offertext"
            android:textAllCaps="true"
            android:textColor="@color/brandstore_text_color"
            android:textSize="@dimen/brandstore_text_font_size"
            android:typeface="serif" />

        <RatingBar
            android:id="@+id/ratingbar_collection"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/items_vertical_margin"
            android:layout_marginLeft="@dimen/items_horizontal_margin"
            android:layout_marginTop="@dimen/items_vertical_margin" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue_color" >

        <TextView
            android:id="@+id/textview_newcollectionviews"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/items_horizontal_margin"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/text_border_vertical_padding"
            android:paddingTop="@dimen/text_border_vertical_padding"
            android:text="@string/text_views"
            android:textColor="@color/heading_text_color"
            android:textSize="@dimen/details_text_font_size"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textview_newcollectionreviews"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/items_horizontal_margin"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/text_border_vertical_padding"
            android:paddingTop="@dimen/text_border_vertical_padding"
            android:text="@string/text_reviews"
            android:textColor="@color/heading_text_color"
            android:textSize="@dimen/details_text_font_size"
            android:typeface="serif" />
    </LinearLayout>

</LinearLayout>