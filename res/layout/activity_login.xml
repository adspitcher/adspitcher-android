<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageview_loginlogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/cd_img_splash"
        android:src="@drawable/splash" />

    <EditText
        android:id="@+id/edittext_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/items_horizontal_margin"
        android:layout_marginRight="@dimen/items_horizontal_margin"
        android:layout_marginTop="@dimen/items_vertical_margin"
        android:ems="10"
        android:hint="@string/text_username"
        android:inputType="none"
        android:textColor="@color/heading_text_color"
        android:textColorHint="@color/hint_text_color"
        android:typeface="serif" >

    <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/edittext_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/items_horizontal_margin"
        android:layout_marginRight="@dimen/items_horizontal_margin"
        android:layout_marginTop="@dimen/items_vertical_margin"
        android:ems="10"
        android:hint="@string/text_password"
        android:inputType="textPassword"
        android:textColor="@color/heading_text_color"
        android:textColorHint="@color/hint_text_color"
        android:typeface="serif" >

    </EditText>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/items_horizontal_margin"
        android:layout_marginRight="@dimen/items_horizontal_margin"
        android:layout_marginTop="@dimen/items_vertical_margin"
        android:text="@string/text_signin"
        android:textColor="@color/heading_text_color"
        android:typeface="serif" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textview_createaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_background_color"
            android:drawableRight="@drawable/ic_action_navigation_next_item"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/items_vertical_padding"
            android:paddingLeft="@dimen/items_horizontal_padding"
            android:paddingRight="@dimen/items_horizontal_padding"
            android:paddingTop="@dimen/items_vertical_padding"
            android:text="@string/text_create_account"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/heading_text_color"
            android:typeface="serif" />

    </LinearLayout>

</LinearLayout>
