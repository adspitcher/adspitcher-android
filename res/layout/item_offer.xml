<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/offer_item_background_color" >

        <TextView
            android:id="@+id/textview_offertext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/items_vertical_margin"
            android:layout_marginLeft="@dimen/items_horizontal_margin"
            android:layout_marginTop="@dimen/items_vertical_margin"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="@string/text_offertext"
            android:textColor="@color/offer_text_color"
            android:textSize="@dimen/offers_text_font_size"/>

        <ImageView
            android:id="@+id/imageview_voteup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/cd_img_thumbsup"
            android:paddingRight="@dimen/items_horizontal_padding"
            android:layout_marginBottom="@dimen/items_vertical_margin"
            android:layout_marginLeft="@dimen/items_horizontal_margin"
            android:layout_marginTop="@dimen/items_vertical_margin"
            android:src="@drawable/ic_action_rating_good" />

        <ImageView
            android:id="@+id/imageview_votedown"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/items_vertical_margin"
            android:layout_marginRight="@dimen/items_horizontal_margin"
            android:layout_marginTop="@dimen/items_vertical_margin"
            android:contentDescription="@string/cd_img_thumbsdown"
            android:src="@drawable/ic_action_rating_bad" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/offer_item_background_color"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/textview_brandstore"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/items_vertical_margin"
            android:layout_marginLeft="@dimen/items_horizontal_margin"
            android:layout_marginTop="@dimen/items_vertical_margin"
            android:layout_weight="1"
            android:maxLength="30"
            android:text="@string/text_offertext"
            android:textAllCaps="true"
            android:textColor="@color/brandstore_text_color"
            android:textSize="@dimen/brandstore_text_font_size"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue_color" >

        <TextView
            android:id="@+id/textview_views"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/items_horizontal_margin"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/text_border_vertical_padding"
            android:paddingTop="@dimen/text_border_vertical_padding"
            android:text="@string/text_views"
            android:textSize="@dimen/details_text_font_size"
            android:textColor="@color/heading_text_color"/>

        <TextView
            android:id="@+id/textview_reviews"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/items_horizontal_margin"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/text_border_vertical_padding"
            android:paddingTop="@dimen/text_border_vertical_padding"
            android:text="@string/text_reviews"
            android:textSize="@dimen/details_text_font_size"
            android:textColor="@color/heading_text_color"/>
        
        <TextView
            android:id="@+id/textview_ups"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/items_horizontal_margin"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/text_border_vertical_padding"
            android:paddingTop="@dimen/text_border_vertical_padding"
            android:text="@string/text_up"
            android:textSize="@dimen/details_text_font_size"
            android:textColor="@color/heading_text_color"/>
        
        <TextView
            android:id="@+id/textview_downs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/items_horizontal_margin"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/text_border_vertical_padding"
            android:paddingTop="@dimen/text_border_vertical_padding"
            android:text="@string/text_down"
            android:textSize="@dimen/details_text_font_size"
            android:textColor="@color/heading_text_color"/>

    </LinearLayout>

</LinearLayout>
