<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageview_loginlogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/cd_img_splash"
        android:src="@drawable/ic_adspitcher_logo" />

    <EditText
        android:id="@+id/edittext_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/items_horizontal_margin"
        android:layout_marginRight="@dimen/items_horizontal_margin"
        android:layout_marginTop="@dimen/items_vertical_margin"
        android:drawableRight="@drawable/ic_action_search_white"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/heading_text_color"
        android:typeface="serif" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textview_signup_benefits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/items_horizontal_margin"
        android:layout_marginRight="@dimen/items_horizontal_margin"
        android:layout_marginTop="@dimen/items_vertical_margin"
        android:drawableLeft="@drawable/ic_action_about_white"
        android:text="@string/text_signup_benefits"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/heading_text_color"
        android:typeface="serif" />
    
    <TextView
        android:id="@+id/textview_benefits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/items_horizontal_margin"
        android:layout_marginRight="@dimen/items_horizontal_margin"
        android:layout_marginTop="@dimen/items_vertical_margin"
        android:drawableLeft="@drawable/ic_notification_white"
        android:text="@string/text_signup_benefits"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/heading_text_color"
        android:typeface="serif" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textview_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_background_color"
            android:drawableRight="@drawable/ic_navigation_next_item_white"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/text_border_vertical_padding"
            android:paddingLeft="@dimen/text_border_horizontal_padding"
            android:paddingRight="@dimen/text_border_horizontal_padding"
            android:paddingTop="@dimen/text_border_vertical_padding"
            android:text="@string/text_existinguser_signin"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/heading_text_color"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textview_createaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_background_color"
            android:drawableRight="@drawable/ic_navigation_next_item_white"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/text_border_vertical_padding"
            android:paddingLeft="@dimen/text_border_horizontal_padding"
            android:paddingRight="@dimen/text_border_horizontal_padding"
            android:paddingTop="@dimen/text_border_vertical_padding"
            android:text="@string/text_create_account"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/heading_text_color"
            android:typeface="serif" />
    </LinearLayout>

</LinearLayout>